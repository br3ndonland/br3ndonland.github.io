{
  "name": "bws",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "astro": "astro",
    "build": "astro build",
    "check": "prettier . --check && cspell --dot --gitignore **/*.astro **/*.md* && astro check",
    "dev": "astro dev",
    "fmt": "prettier . --write",
    "preview": "astro preview",
    "start": "astro dev",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "prettier": {
    "semi": false,
    "plugins": [
      "prettier-plugin-astro"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      },
      {
        "files": [
          "COMMIT_EDITMSG"
        ],
        "options": {
          "parser": "markdown",
          "printWidth": 72,
          "proseWrap": "always"
        }
      }
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdown-remark": "^6.3.6",
    "@astrojs/mdx": "^4.3.5",
    "@astrojs/sitemap": "^3.6.0",
    "@pagefind/default-ui": "~1.3",
    "astro": "^5.13.9",
    "pagefind": "~1.3",
    "rehype": "~13.0",
    "rehype-autolink-headings": "^7.1.0",
    "sharp": "^0.34.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "cspell": "^9",
    "prettier": "~3.6",
    "prettier-plugin-astro": "^0.14.1",
    "vitest": "^3.2.4"
  }
}
